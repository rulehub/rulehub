{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "title": "RuleHub Backstage Plugin Index",
  "description": "Schema for dist/index.json consumed by the Backstage policy catalog plugin.",
  "type": "object",
  "required": ["packages"],
  "properties": {
    "packages": {
      "type": "array",
      "description": "List of policy packages exposed to the plugin.",
      "items": {
        "type": "object",
        "required": ["id", "name", "standard", "version", "coverage"],
        "additionalProperties": false,
        "properties": {
          "id": {
            "type": "string",
            "description": "Stable policy identifier <namespace>.<short_id> (e.g., pci.storage_encryption).",
            "pattern": "^[a-z0-9_.-]+\\.[a-z0-9_.-]+$"
          },
          "name": { "type": "string", "description": "Human-friendly policy name." },
          "standard": {
            "type": "string",
            "description": "Source domain / standard (PCI DSS, GDPR, etc.)."
          },
          "version": {
            "type": ["string", "number"],
            "description": "Version of the standard / domain."
          },
          "coverage": {
            "type": "array",
            "description": "Readable labels of regulation sections referencing this policy.",
            "items": { "type": "string" }
          }
        }
      }
    }
  },
  "additionalProperties": false
}
